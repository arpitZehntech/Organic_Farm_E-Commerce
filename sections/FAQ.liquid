<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FAQ</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="container-fluid">
                <div id="container-category-faq">
                    {% for block in section.blocks %}
                        {% if block.type == 'header' %}
                            <h3 id="category-faq-title" class="text-center">{{ block.settings.header }}</h3>
                        {% else %}
                            <div class="accordion" id="accordion-{{ block.id }}">
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="heading-{{ block.id }}">
                                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{ block.id }}" aria-expanded="true" aria-controls="collapse-{{ block.id }}">
                                            {{ block.settings.question }}
                                        </button>
                                    </h2>
                                    <div id="collapse-{{ block.id }}" class="accordion-collapse collapse {% if block.settings.display == true %}show{% endif %}" aria-labelledby="heading-{{ block.id }}" data-bs-parent="#accordion-{{ block.id }}">
                                        <div class="accordion-body">
                                            {{ block.settings.answer | raw }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qS6lvo5oao5b8tfo5F9WzjcUQWj3PeUpF+hoF8Fc6w2xIe5fEX5/01GlwNY6aFb8F" crossorigin="anonymous"></script>
</body>
</html>

{% schema %}
{
    "name": "FAQ",
    "settings": [],
	"blocks": [
		{
			"type": "header",
			"name": "Header",
			"settings": [{
					"type": "header",
					"content": "Header"
				},
				{
					"type": "text",
					"id": "header",
					"label": "Header"
				}
			]
		},
		{
            "type": "slide",
            "name": "Question",
            "settings": [{
                    "type": "header",
                    "content": "Question Item"
                },
                {
                    "type": "text",
                    "id": "id",
                    "label": "id — text"
				},
				{
					"type":      "checkbox",
					"id":        "display",
					"label":     "Display Answer",
					"default":   false
				 },
                {
                    "type": "text",
                    "id": "question",
                    "label": "Question — text"
                },
                {
                    "type": "html",
                    "id": "answer",
                    "label": "Answer — html"
                }
            ]
        }
    ],
  "presets": [
    {
      "name": "FAQ"
    }
  ]
}
{% endschema %}